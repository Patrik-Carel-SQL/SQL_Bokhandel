doctype html 
html 
    head 
        title Bokhandel Webbserver 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous") 
        style
            include book.css

    body 
        a(href="/")
            i.fas.fa-arrow-circle-left
        div.container      
            h1#Title=title
            img(src="https://image.bokus.com/images/" + ISBN13)
            h2#author=author
            h3#publishDate=publishDate
            h6#sidor Antal sidor: 
                span=sidor 
            h4#price=price

               

        div.saldo
            h2 Lagersaldo:
            each butik in butikLager  
                div.Butiker
                    h3=butik.Butiksnamn + ": "
                    if butik.Antal > 0
                        h4#Lager=butik.Antal 
                    else 
                        h4#Lager Ej lager


            
                 
            

    script(src="https://kit.fontawesome.com/ad7e5bb9d9.js" crossorigin="anonymous")
